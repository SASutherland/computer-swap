<div class="banner" data-navbar-target="banner">
  <div class="container">
    <h1>Computer Swap lets you rent the best laptops!</h1>
      <p>Choose a computer based on the  <span data-controller="typed-js"></span></p>
      <a class="btn-purple" href="#laptops" role="button">Start browsing</a>
  </div>
</div>

<div class="steps-container cards">
  <div class="card steps" style="color: #d16186;">
    <h3>Choose it</h3>
    <%= image_tag "choose-it.avif" %>
    <div class="card-body">
      <p class="card-text"> Explore our catalog of available laptops</p>
    </div>
  </div>
  <div class="card steps" style="color: #f7996e;">
    <h3>Book it</h3>
    <%= image_tag "book-it.avif" %>
    <div class="card-body">
      <p class="card-text"> Book the laptop you need, when you need it!</p>
    </div>
  </div>
  <div class="card steps" style="color: #e7eb90;">
    <h3>Return it</h3>
    <%= image_tag "return-it.avif" %>
    <div class="card-body">
      <p class="card-text"> When you're done, bring the laptop back to its owner</p>
    </div>
  </div>
</div>


<div class="container" id="laptops">
  <div class="index-container mb-5">
    <h1>Choose a laptop</h1>
  <%= render "searchbar", computers: @computers %>
    <div class="cards">
      <% @computers.each do |computer| %>
        <div class="card">
          <% if computer.photos.attached? %>
            <%= cl_image_tag computer.photos.first.key, class: 'laptop-image' %>
          <% end %>
          <ul>
            <li> <strong><%= computer.brand %></strong> </li>
            <li> Ideal for: <%= computer.category %> </li>
            <li> Screen size: <%= computer.screen_size %> inches </li>
            <li> <span class="price"><em><strong><%= computer.price %>â‚¬ / day</strong></em></span> </li>
          </ul>
          <div class="container justify-content-center">
            <% if user_signed_in? %>
              <%= link_to "See more", computer_path(computer), class: "btn-purple btn-card" %>
            <% else %>
              <%= link_to "See more", new_user_session_path, class: "btn-purple btn-card" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
