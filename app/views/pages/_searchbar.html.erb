<div class="search-form-control form-group">
  <%= form_with url: root_path(anchor: "computers-anchor"), method: :get, class: "d-flex", data: {turbo: false}  do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a laptop"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  </div>
