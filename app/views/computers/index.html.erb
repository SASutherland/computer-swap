

<div class="container">
  <h1>Available Computers</h1>
  <div class="row d-flex justify-content-between">
    <% @computers.each do |computer| %>
      <div class="col-4 mb-3">
        <div class="card h-100 d-flex row justify-content-center">
          <% computer.photos.each do |photo| %>
            <%= cl_image_tag photo.key, width: 400, height: 300, crop: :fill %>
          <% end %>
          <%= computer.brand %>
          <%= computer.category %>
          <%= computer.screen_size %>
          <%= computer.price %>
          <%= link_to "See details", computer_path(computer), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
