<div class="container dashboard">
  <h3>My Renting Dashboard</h3>
    <div class="computers-container">
      <div class ="no-hover d-flex justify-content-around">
        <div>
              <h3> My Computer </h3>
              <div class="row computers-box">
                <div class="col">
                  <% @computer.photos.each do |photo| %>
                      <%= cl_image_tag photo.key, width: 300, height: 250, crop: :fill  %>
                  <% end %>
                </div>
                <div class="col">
                  <ul>
                  <li><%= @computer.brand %> </li>
                  <li> <%= @computer.model %> </li>
                  <li><strong><%= @computer.price %> â‚¬/day </strong></li>
                  </ul>
                </div>
                <div class="col icon d-flex flex-column justify-content-between">
                  <%= link_to "",  new_computer_path, class: "fa-solid fa-circle-plus d-block" %>
                  <%= link_to "",  edit_computer_path(@computer), class: "fa-solid fa-pencil d-block" %>
                  <%= link_to "", computer_path(@computer), class: "fa-solid fa-trash-can d-block", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
                </div>
              </div>
          </div>
      </div>
    </div>
    <div class="bookings-computer">
      <div class="no-hover d-flex justify-content-around">
      <div>
        <h3> My Bookings </h3>
        <div class="row booking-box">
          <div class="col">
          <% @bookings.each do |booking| %>
            <li> Start Date : <%= booking.start_date  %></li>
            <li> End Date :  <%= booking.end_date %> </li>
            <% start = booking.start_date %>
            <% last = booking.end_date %>
            <% result = last - start %>
            <% price = result.to_i * @computer.price %>
            <li> Number of Days : <%= result.to_i %> days</li>


              <h5 class ="balance">Balance : <strong><%= price %> Euros</strong> </h5>
            
          </div>
            <div class=" col icon d-flex flex-column justify-content-between align-items-center">
              <%= link_to "",   edit_booking_path(booking), class: "fa-solid fa-pencil d-block" %>
              <%= link_to "",   booking_path(booking), class: "fa-solid fa-trash-can d-block", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
